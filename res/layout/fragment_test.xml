<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TestActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/users_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/users_get" />

        <Button
            android:id="@+id/friends_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/friends_get" />

        <Button
            android:id="@+id/music_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/music_get" />

        <Button
            android:id="@+id/captcha_force"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/captcha_force" />

        <Button
            android:id="@+id/wall_post"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/wall_post" />

        <Button
            android:id="@+id/upload_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/upload_photo" />

        <Button
            android:id="@+id/upload_photo_to_wall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/upload_photo_to_wall" />

        <Button
            android:id="@+id/upload_several_photos_to_wall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/upload_several_photos_to_wall" />

        <Button
            android:id="@+id/test_validation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/test_validation" />

        <Button
            android:id="@+id/test_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/test_share" />
    </LinearLayout>

</ScrollView>